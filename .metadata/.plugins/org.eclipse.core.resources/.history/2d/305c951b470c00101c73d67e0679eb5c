<body>
    <div class="container">
        <h2>Manage Flights</h2>
        <div class="filter-bar">
            <select id="source">
                <option value="">Source</option>
                <% Connection conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/airline", "root", "root");
                   Statement stmt = conn.createStatement();
                   ResultSet rs = stmt.executeQuery("SELECT DISTINCT source FROM flights");
                   while (rs.next()) { %>
                       <option value="<%= rs.getString("source") %>"><%= rs.getString("source") %></option>
                <% } rs.close(); %>
            </select>
            <select id="destination">
                <option value="">Destination</option>
                <% rs = stmt.executeQuery("SELECT DISTINCT destination FROM flights");
                   while (rs.next()) { %>
                       <option value="<%= rs.getString("destination") %>"><%= rs.getString("destination") %></option>
                <% } rs.close(); conn.close(); %>
            </select>
            <input type="date" id="date">
            <button onclick="searchFlights()">Search</button>
        </div>
        <a href="add_flight.jsp">Add Flight</a>
        <a href="schedule_flight.jsp">Schedule Flight</a>
        <table>
            <tr>
                <th>Flight ID</th>
                <th>Flight Number</th>
                <th>Airline Name</th>
                <th>Source</th>
                <th>Destination</th>
                <th>Departure Time</th>
                <th>Arrival Time</th>
                <th>Total Seats</th>
                <th>Available Seats</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
            <% conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/airline", "root", "root");
               stmt = conn.createStatement();
               rs = stmt.executeQuery("SELECT * FROM flights");
               while (rs.next()) { %>
            <tr>
                <td><%= rs.getInt("flight_id") %></td>
                <td><%= rs.getString("flightnumber") %></td>
                <td><%= rs.getString("airline_name") %></td>
                <td><%= rs.getString("source") %></td>
                <td><%= rs.getString("destination") %></td>
                <td><%= rs.getString("departure_time") %></td>
                <td><%= rs.getString("arrival_time") %></td>
                <td><%= rs.getInt("total_seats") %></td>
                <td><%= rs.getInt("available_seats") %></td>
                <td><%= rs.getDouble("price") %></td>
                <td class="action-links">
                    <a href="edit_flight.jsp?flight_id=<%= rs.getInt("flight_id") %>" class="edit">Edit</a>
                    <a href="delete_flight.jsp?flight_id=<%= rs.getInt("flight_id") %>" class="delete">Delete</a>
                </td>
            </tr>
            <% } rs.close(); stmt.close(); conn.close(); %>
        </table>
    </div>
    <script>
        function searchFlights() {
            var source = document.getElementById("source").value;
            var destination = document.getElementById("destination").value;
            var date = document.getElementById("date").value;
            window.location.href = "manage_flights.jsp?source=" + source + "&destination=" + destination + "&date=" + date;
        }
    </script>
